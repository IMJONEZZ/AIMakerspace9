# AI Life Coach Environment Configuration
# Copy this file to .env and fill in your actual values

# =====================================================
# LLM Configuration
# =====================================================

# Use local LLM endpoint (recommended for development)
USE_LOCAL_ENDPOINT=true
LOCAL_ENDPOINT=http://192.168.1.79:8080/v1
LOCAL_MODEL=glm-4.7

# OpenAI Configuration (for cloud-based GPT models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =====================================================
# Memory & Storage Configuration
# =====================================================

# Memory store type: 'in_memory' or 'postgres'
MEMORY_STORE_TYPE=in_memory

# Database URI for persistent storage (if using postgres)
DATABASE_URI=sqlite:///ai_life_coach.db

# Workspace directory for context files
WORKSPACE_DIR=./workspace

# =====================================================
# Optional: LangSmith Tracing (for debugging)
# =====================================================

LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=ai-life-coach

# =====================================================
# System Behavior
# =====================================================

# Enable debug mode (verbose logging)
DEBUG_MODE=false

# Maximum depth for subagent spawning
MAX_SUBAGENT_DEPTH=3

# Enable human-in-the-loop approval for agent actions
ENABLE_HUMAN_APPROVAL=false